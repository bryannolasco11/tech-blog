<article>
  <h2>
    Edit Comment
  </h2>
  <form class="edit-comment-form">
    <div>
      <label class="form-label" for="comment_text">Content</label>
      <input name="comment_text" type="text" value="{{comment.comment_text}}"/>
    </div>
    <div>
      
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit">Save comment</button>
    <button type="button" class="delete-comment-btn">Delete post</button>
  </form>
</article>
